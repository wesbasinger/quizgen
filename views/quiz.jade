extends ./layout.jade

block title
  title Welcome

block content
  h1 Single Quiz
  p= quiz.description
  form
    each question in quiz.questions
      section
        h2= question.text
        each choice in question.choices
          input(type="radio" name="question._id" value="question._id")
          label= choice
          br
    input(type="submit" value="Submit")
  h2 You are logged in as
  p= email
